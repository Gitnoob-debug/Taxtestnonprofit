# Database
DATABASE_URL=postgresql://user:password@host:5432/database

# OpenAI (for embeddings)
OPENAI_API_KEY=sk-...

# OpenRouter (for Claude LLM)
OPENROUTER_API_KEY=sk-or-...

# Supabase
# Public URL (used client-side and server-side)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJ...
# Server-only key (has elevated permissions for hybrid search)
SUPABASE_SERVICE_KEY=eyJ...
# Alternative names (optional - code checks both)
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_ANON_KEY=eyJ...

# Google AdSense
# Get your publisher ID from https://www.google.com/adsense/
NEXT_PUBLIC_GOOGLE_ADSENSE_ID=ca-pub-XXXXXXXXXXXXXXXX
# Create ad units in AdSense and get slot IDs
NEXT_PUBLIC_AD_SLOT_CHAT=1234567890
NEXT_PUBLIC_AD_SLOT_SIDEBAR=1234567891
NEXT_PUBLIC_AD_SLOT_BANNER=1234567892
